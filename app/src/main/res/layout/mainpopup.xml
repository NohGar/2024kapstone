<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    android:background="@drawable/rounded_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popupbg"
        android:layout_margin="@dimen/_10sdp"
        android:padding="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <TextView
            android:id="@+id/popup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 날짜"
            android:textColor="@color/recent_day3"
            android:textSize="18sp"
            android:layout_gravity="top|start"
                 android:layout_weight="1"
            android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일일 통계"
                android:textColor="@color/recent_day3"
                android:textSize="18sp"
                android:layout_weight="1"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/daily_pushup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="push-up"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_weight="1"
             />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:text="00개"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/daily_pullup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pull-up"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_weight="1"
        />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00개"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/daily_squart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="squat"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_weight="1"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00개"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_weight="1"
                />
        </LinearLayout>
</LinearLayout>

    </RelativeLayout>
